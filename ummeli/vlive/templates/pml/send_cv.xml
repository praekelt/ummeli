{% extends "base.xml" %}

{% block title %}
    Ummeli
{% endblock %}

{% block content %}
<MODULE backgroundColor="MiGreen">
    <HEADER><LABEL>Send your CV</LABEL></HEADER>
    <CONTAINER type="data">
        <TEXT>Sending your CV by email is always free on Ummeli - simply enter the 
        email address of the recipient in the field below and Ummeli will automatically 
        send it for you!
        <br/><br/>
        As part of our launch promotion, weâ€™re offering 2 
        free job application FaxSends to the first 5000 smart jobseekers who create their 
        mobile CV on Ummeli.</TEXT><br/>
        <TEXT><color value="blue">You have <b>
        {{user_profile.faxes_remaining}} 
        fax{{user_profile.faxes_remaining|pluralize:"es"}}</b> 
        remaining.</color></TEXT>
    </CONTAINER>
    {% if form.errors %}
        <CONTAINER type="data">
        {% for field in form %}
        {% for error in field.errors %}
            <TEXT class="error">{{error}}</TEXT><br/>
        {% endfor %}
        {% endfor %}
        </CONTAINER>
    {% endif %}
    <CONTAINER  type="form">
        <FORM method="POST" href="{{request.path}}" submit_text="Send">
            <CHOICE-GROUP type="radio" name="send_via">
                <TEXT>Send via</TEXT>
                <CHOICE value="email" checked="True">Email</CHOICE>
                {% if user_profile.can_send_fax %}
                <CHOICE value="fax">Fax</CHOICE>
                {% endif %}
            </CHOICE-GROUP>
            <FIELD name="send_to" type="text"/><br/>
            <FIELD type='hidden' name='_action' value='POST' />
            <FIELD type='hidden' name='csrfmiddlewaretoken' value='{{ csrf_token }}' />
        </FORM>
    </CONTAINER>
</MODULE>
{% endblock %}
