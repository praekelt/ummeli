{% extends "base.xml" %}

{% block title %}
    Login
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>Welcome to Ummeli.</LABEL></HEADER>
    {% if user_exists %}
        <CONTAINER type="form">
            <FORM method="GET" href="{% url login_post %}" submit_text="Sign In">
                {% if form.errors %}
                    <TEXT>Sign in failed.<br />Please try again.</TEXT>
                {% endif %}
                <TEXT position="ABOVE">Enter Pin to sign in.</TEXT>
                <FIELD name="password" type="password"/>
                <FIELD name="next" type="hidden" value="{{next}}"/>
                <FIELD name="username" type="hidden" value="{{msisdn}}"/>
            </FORM>
        </CONTAINER>
        <CONTAINER type="list">
            <LINK href="{% url index %}/forgot/">
                <TEXT>Forgotton your Pin?</TEXT>
            </LINK>
        </CONTAINER>
    {% else %} 
        <CONTAINER type="list">
            <LINK href="{% url register %}">
                <TEXT>Click here to create profile.</TEXT>
            </LINK>
        </CONTAINER>
    {% endif %}
</MODULE>
{% endblock %}
