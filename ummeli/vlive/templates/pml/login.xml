{% extends "base.xml" %}

{% block title %}
    Login
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>Welcome to Ummeli.</LABEL></HEADER>
    {% if user_exists %}
        <CONTAINER type="form">
            <FORM method="POST" href="{% url vlive:login %}" submit_text="Sign In">
                {% if form.errors %}
                    <TEXT>Sign in failed.<br />Please try again.</TEXT>
                {% endif %}
                <LABEL>Enter Pin to sign in.</LABEL>
                
                <br/>
                <TEXT position="ABOVE">Pin</TEXT>
                <FIELD name="password" type="text"/>
                <FIELD name="next" type="hidden" value="{{next}}"/>
                <FIELD name="username" type="hidden" value="{{msisdn}}"/>

                {% csrf_token %}
                
                <LINK href="{% url vlive:index %}forgot/">Forgotton your Pin?</LINK>
            </FORM>
        </CONTAINER>
    {% else %} 
        <CONTAINER type="list">
            <TITLE>
            <LINK href="{% url vlive:register %}">Click here to create profile.</LINK>
            </TITLE>
        </CONTAINER>
    {% endif %}
</MODULE>
{% endblock %}
