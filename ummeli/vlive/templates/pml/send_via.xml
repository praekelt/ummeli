{% extends "base.xml" %}

{% block title %}
    Ummeli
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>Send CV via {{via}}</LABEL></HEADER>
    {% if via == 'Fax' %}
    <CONTAINER type="data">
        <TEXT><color value="blue">Please note that sending a fax will cost you R2.00.</color></TEXT>
    </CONTAINER>
    {% endif %}
    <CONTAINER type="data">
    {{ form.errors_as_pml }}
    </CONTAINER>
    <CONTAINER  type="form">
        <FORM method="POST" href="{{request.path}}" submit_text="Submit">
            {{ form.as_pml }}
            <FIELD type='hidden' name='_action' value='POST' />
            <FIELD type='hidden' name='csrfmiddlewaretoken' value='{{ csrf_token }}' />
        </FORM>
    </CONTAINER>
    <CONTAINER  type="list">
        <LINK href="{% url send %}">
            <TEXT>Cancel</TEXT>
        </LINK>
    </CONTAINER>
</MODULE>
{% endblock %}
