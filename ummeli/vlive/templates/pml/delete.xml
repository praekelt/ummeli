{% extends "base.xml" %}

{% block title %}
    Ummeli
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>Confirm delete</LABEL></HEADER>
    <CONTAINER  type="form">
        <TEXT>Are you sure you want to delete {{object}}?</TEXT>
        <FORM method="POST" href="{% url edit_post %}" submit_text="Save">
            {{ form.as_pml }}
            <FIELD type='hidden' name='submit' value='Delete' />
        </FORM>
    </CONTAINER>
    <CONTAINER  type="list">
        <LINK href="{{cancel_url}}">
            <TEXT>Cancel</TEXT>
        </LINK>
    </CONTAINER>
</MODULE>
{% endblock %}
