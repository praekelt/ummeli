{% extends "base.xml" %}

{% block title %}
    Ummeli
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>Forgot Pin</LABEL></HEADER>
    <CONTAINER  type="form">
        <TEXT>Are you sure you want to reset your Pin?</TEXT><br/>
        <TEXT>Your new Pin will be sent to {{request.vlive.msisdn}}.</TEXT>
        <FORM method="POST" href="{{request.path}}" submit_text="Reset Pin">
            <FIELD type='hidden' name='_action' value='POST' />
            <FIELD type='hidden' name='csrfmiddlewaretoken' value='{{ csrf_token }}' />
        </FORM>
    </CONTAINER>
    <CONTAINER  type="list">
        <LINK href="{% url login %}">
            <TEXT>Cancel</TEXT>
        </LINK>
    </CONTAINER>
</MODULE>
{% endblock %}
