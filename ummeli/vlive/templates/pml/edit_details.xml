{% extends "base.xml" %}

{% block title %}
    Ummeli
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>Edit {{page_title}}</LABEL></HEADER>
    <CONTAINER type="data">
    {{ form.errors_as_pml }}
    </CONTAINER>
    <CONTAINER  type="form">
        <FORM method="POST" href="{{request.path}}" submit_text="Submit">
            {{ form.as_pml }}
            <FIELD type='hidden' name='form_name' value='{{form_name}}' />
            <FIELD type='hidden' name='_action' value='POST' />
            <FIELD type='hidden' name='csrfmiddlewaretoken' value='{{ csrf_token }}' />
        </FORM>
    </CONTAINER>
    <CONTAINER  type="list">
        <LINK href="{% url edit %}">
            <TEXT>Cancel</TEXT>
        </LINK>
    </CONTAINER>
</MODULE>
{% endblock %}
