{% extends "base.xml" %}

{% block title %}
    Welcome
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>Welcome to Ummeli.</LABEL></HEADER>
    <CONTAINER  type="data">
        <TITLE>Welcome</TITLE>
        <TEXT>YoungAfricaLive welcomes you to Ummeli: your mobile social work finder!  
        Ummeli allows you to view existing jobs, add jobs that you might know of and 
        want to tell fellow-YALLERS about.  It also allows you to create and edit a CV 
        on your phone, as well as send your CV in reply to a job add that you are 
        interested in.</TEXT>
        <br/>
        {% if user_exists %}
        <CONTAINER  type="data">
        <LINK href="{% url edit %}?{{uuid}}">
            <TEXT>Edit CV</TEXT>
        </LINK>
        </CONTAINER>
        <TEXT>Update or change any of the info in your mobile CV.</TEXT>
        <br/>
        {% else %}
        <CONTAINER  type="data">
        <LINK href="{% url register %}?{{uuid}}">
            <TEXT>Create CV</TEXT>
        </LINK>
        </CONTAINER>
        <TEXT>Set up your account and get going with creating your unique mobile CV via Ummeli</TEXT>
        <br/>
        {% endif %}
        <CONTAINER  type="data">
        <LINK href="{% url send %}">
            <TEXT>Send CV</TEXT>
        </LINK>
        </CONTAINER>
        <TEXT>One liner here...</TEXT>
        <br/>
        <CONTAINER  type="data">
        <LINK href="{% url jobs_province %}">
            <TEXT>View jobs</TEXT>
        </LINK>
        </CONTAINER>
        <TEXT>One liner here...</TEXT>
        <br/>
    </CONTAINER>
</MODULE>
<MODULE backgroundColor="false" palette="MiMarine">
    <HEADER><LABEL>Mange Profile</LABEL></HEADER>
    <CONTAINER  type="list">
        <LINK href="{% url password_change %}">
            <TEXT>Change pin</TEXT>
        </LINK>
    </CONTAINER>
</MODULE>
{% endblock %}
