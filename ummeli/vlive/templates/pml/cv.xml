{% extends "base.xml" %}

{% block title %}
    Ummeli
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>Edit your CV</LABEL></HEADER>
    <CONTAINER  type="list">
        <LINK href="{% url edit_personal %}?{{uuid}}">
            <TEXT>Personal details</TEXT>
        </LINK>
        <LINK href="{% url edit_contact %}?{{uuid}}">
            <TEXT>Contact details</TEXT>
        </LINK>
        <LINK href="{% url edit_education %}?{{uuid}}">
            <TEXT>Education details</TEXT>
        </LINK>
        <LINK href="{% url certificate_list %}?{{uuid}}">
            <TEXT>Certificates</TEXT>
        </LINK>
        <LINK href="{% url workExperience_list %}?{{uuid}}">
            <TEXT>Work experience</TEXT>
        </LINK>
        <LINK href="{% url language_list %}?{{uuid}}">
            <TEXT>Language details</TEXT>
        </LINK>
        <LINK href="{% url reference_list %}?{{uuid}}">
            <TEXT>References</TEXT>
        </LINK>
    </CONTAINER>
</MODULE>
{% endblock %}
