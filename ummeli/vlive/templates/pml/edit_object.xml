{% extends "base.xml" %}

{% block title %}
    Ummeli
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>Edit {{page_title}}</LABEL></HEADER>
    <CONTAINER  type="form">
        <FORM method="POST" href="{{request.path}}" submit_text="Save">
            {{ form.as_pml }}
        </FORM>
    </CONTAINER>
    <CONTAINER  type="list">
        <LINK href="{{cancel_url}}">
            <TEXT>Cancel</TEXT>
        </LINK>
        <LINK href="{% url edit %}/{{list_name}}/delete/{{ object.id }}">
            <TEXT>Delete</TEXT>
        </LINK>
    </CONTAINER>
</MODULE>
{% endblock %}
