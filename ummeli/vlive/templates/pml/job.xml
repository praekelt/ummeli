{% extends "base.xml" %}

{% block title %}
    Ummeli
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>{{title}}</LABEL></HEADER>
    <CONTAINER  type="data">
        <TITLE>{{job.date|date:'d M y'}} ::  {{job.source}}</TITLE>
        {% if job.user_submitted %}
        <TEXT><color value="blue">submitted by YAL user</color></TEXT><br/>
        {% endif %}
        <TEXT>
            {{ job.text }}
        </TEXT>
    </CONTAINER>
    <br/>
    <CONTAINER  type="list">
        <LINK href="{% url jobs search_id cat_id %}">
            <TEXT>&lt;&lt; Back</TEXT>
        </LINK>
    </CONTAINER>
</MODULE>
<MODULE backgroundColor="MiGreen">
    <HEADER><LABEL>Apply</LABEL></HEADER>
    {% if request.user.is_authenticated %}
    <CONTAINER type="data">
        <TEXT><color value="blue">You have <b>
        {{user_profile.faxes_remaining}} 
        fax{{user_profile.faxes_remaining|pluralize:"es"}}</b> 
        remaining.</color></TEXT>
    </CONTAINER>
    {% if form.errors %}
        <CONTAINER type="data">
        {% for field in form %}
        {% for error in field.errors %}
            <TEXT class="error">{{error}}</TEXT><br/>
        {% endfor %}
        {% endfor %}
        </CONTAINER>
    {% endif %}
    <CONTAINER  type="form">
        <FORM method="POST" href="{{request.path}}" submit_text="Apply">
            <CHOICE-GROUP type="radio" name="send_via">
                <TEXT>Send via</TEXT>
                <CHOICE value="email" checked="True">Email</CHOICE>
                {% if user_profile.can_send_fax %}
                <CHOICE value="fax">Fax</CHOICE>
                {% endif %}
            </CHOICE-GROUP>
            <FIELD name="send_to" type="text"/><br/>
            <FIELD type='hidden' name='_action' value='POST' />
            <FIELD type='hidden' name='csrfmiddlewaretoken' value='{{ csrf_token }}' />
        </FORM>
    </CONTAINER>
    {% else %}
    <br/>
    <CONTAINER type="data">
    <TEXT><color value="red">You are not logged in. Please log in to be able to 
    respond to a job advert.</color>
    <br/>
        <LINK href="{% url login %}">
            <TEXT>Login</TEXT>
        </LINK>
    </TEXT>
    </CONTAINER>
    {% endif %}
</MODULE>
{% endblock %}
