{% extends "base.xml" %}

{% block title %}
    Ummeli
{% endblock %}

{% block content %}
<MODULE backgroundColor="false">
    <HEADER><LABEL>{{title}}</LABEL></HEADER>
    <CONTAINER  type="data">
        <TITLE>{{job.date}} ::  {{job.source}}</TITLE>
        <TEXT>
            {{ job.text }}
        </TEXT>
    </CONTAINER>
    <br/>
    <CONTAINER  type="list">
        <LINK href="{% url jobs search_id cat_id %}">
            <TEXT>&lt;&lt; Back</TEXT>
        </LINK>
    </CONTAINER>
</MODULE>
<MODULE backgroundColor="MiGreen">
    <HEADER><LABEL>Apply</LABEL></HEADER>
    {% if request.user.is_authenticated %}
    <CONTAINER type="data">
        <TEXT><color value="blue">You have <b>{{request.user.get_profile.faxes_remaining}} faxe(s)</b> remaining.</color></TEXT>
    </CONTAINER>
    {% if form.errors %}
        <CONTAINER type="form">
            <TEXT class="error">Please fill in the email address or fax number to send your CV to.</TEXT>
        </CONTAINER>
    {% endif %}
    <CONTAINER  type="form">
        <FORM method="POST" href="{{request.path}}" submit_text="Apply">
            <CHOICE-GROUP type="radio" name="send_via">
                <TEXT>Send via</TEXT>
                <CHOICE value="email" checked="True">Email</CHOICE>
                {% if request.user.get_profile.faxes_remaining%}
                <CHOICE value="fax">Fax</CHOICE>
                {% endif %}
            </CHOICE-GROUP>
            <FIELD name="send_to" type="text"/><br/>
            <FIELD type='hidden' name='_action' value='POST' />
            <FIELD type='hidden' name='csrfmiddlewaretoken' value='{{ csrf_token }}' />
        </FORM>
    </CONTAINER>
    {% else %}
    <br/>
    <CONTAINER type="data">
    <TEXT><color value="red">You are not logged in. Please log in to be able to 
    respond to a job advert.</color>
    <br/>
        <LINK href="{% url login %}">
            <TEXT>Login</TEXT>
        </LINK>
    </TEXT>
    </CONTAINER>
    {% endif %}
</MODULE>
{% endblock %}
